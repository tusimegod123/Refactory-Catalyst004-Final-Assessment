   // table
   .container-fluid
      h1(style="margin-top:100px") Registered Patients list
      table.table.table-hover
         thead.thead-dark
            tr
               th(scope="col") #
               th(scope="col") Surname
               th(scope="col") Given name
               th(scope="col") D.O.B
               th(scope="col") Residence
               th(scope="col") Occupation
               th(scope="col") Nationality
               th(scope="col") Gender
               th(scope="col") Category
         tbody
            each patient in allpatients
               tr
                  th(scope="row") 1
                  td #{customer.surname}
                  td #{customer.givenName}
                  td #{customer.dob}
                  td #{customer.residence}
                  td #{customer.occupation}
                  td #{customer.nationality}
                  td #{customer.gender}
                  td #{customer.category}
