doctype html
html(lang="en")
  head
    // Required meta tags
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    // Bootstrap CSS
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="./error.css")
    title COVID-19 (CORONA VIRUS)
  body
    .container.border.border-primary
      img(src="./images/form-header-image.png" width="100%" height="" alt="")
      .container.border.border-primary.text-center
        h4 Ministry of Health
        h2 COVID-19 (CORONA VIRUS)
        h4 Virus - Test Registration Form
        #message.alert.alert-success
          h5 #{message}
          h6.text-right.text-light.m-0.p-0
            i.fa.fa-close.fa-2x.text-right
        form(name="formRegister" action="/" method="POST")
          .form-row
            .form-group.col-md-6.text-left
              label(for="inputSurname") Surname
              input#inputSurname.form-control(type="text" name="surname")
              #fNameErr.error
            .form-group.col-md-6.text-left
              label(for="inputGivenNAme") Given name
              input#inputGivenName.form-control(type="text" name="givenName")
              #lNameErr.error
            .form-group.col-md-6.text-left
              label(for="inputDOB") Date of Birth
              input#inputDOB.form-control(type="date" name="DOB")
              #dobErr.error
            .form-group.col-md-6.text-left
              label(for="inputLName") Place of residence
              input#inputResidence.form-control(type="text" name="residence")
              #residenceErr.error
            .form-group.col-md-6.text-left
              label(for="inputOccupation") Occupation
              input#inputOccupation.form-control(type="text" name="occupation")
              #occupationErr.error
            .form-group.col-md-6.text-left
              label(for="inputNationality") Nationality
              input#inputNationality.form-control(type="text" name="nationality")
              #nationalityErr.error
            .form-group.col-md-12.text-left.mb-0
              label(for="")  Gender
              hr
            .form-group.col-md-12.text-left
              .form-check.custom-control.custom-radio.custom-control-inline
                input#inputMale.custom-control-input(type="radio" value="Male" name="gender" checked="")
                label.custom-control-label(for="inputMale") Male
              .custom-control.custom-radio.custom-control-inline
                input#inputFemale.custom-control-input(type="radio" value="Female" name="gender")
                label.custom-control-label(for="inputFemale") Female
            .form-group.col-md-12.text-left
              label(for="inputCategory")  Category
              select#inputCategory.form-control(name="category")
                option(value="") Select Category
                option(value="Returnee") Returnee
                option(value="Contact") Contact
                option(value="Alert") Alert
                option(value="Volunteer") Volunteer
              #cactegoryErr.error
            .form-group.col-md-12.text-left
              input(type="submit" value="Register")
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
    script(src="./js/validation.js")
